#!/bin/bash
classnamecheckfail=1
count=0
while read line
do
    name=$line
    count=$((count+1))
#if [[ $name != [/]* || $name != ** ]]; then
#    echo "$name"
#fi
if [[ $name != [*/]* ]]; then
	case "$name" in
		*class*)
			value=${name#* } 
			case ${value:0:1} in
				[[:upper:]])
 			                ;;
 			        *)
					classnamecheckfail=0
 			                echo "WARNING---> at line $count: class begins with lowercase letter \"$value\""
 			                ;;
			esac
			#echo $value " --> next word after class" ;;
	esac 
    #echo "---->" "$name"
fi
done < $1
if [[ $classnamecheckfail != 0 ]]; then
echo "file doesn't have any errors"
fi
